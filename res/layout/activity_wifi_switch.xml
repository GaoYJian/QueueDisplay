<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WifiSwitchActivity" >

    <Button
        android:id="@+id/btnStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnStopService"
        android:layout_alignBottom="@+id/btnStopService"
        android:layout_alignParentLeft="true"
        android:text="开始服务" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:text="结束服务" />

    <EditText
        android:id="@+id/etSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStartService"
        android:layout_alignRight="@+id/btnStopService"
        android:layout_below="@+id/btnStartService"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etWifiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSignal"
        android:layout_alignRight="@+id/etSignal"
        android:layout_below="@+id/etSignal"
        android:layout_marginTop="17dp"
        android:ems="10" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etWifiName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="TextView" />

</RelativeLayout>
